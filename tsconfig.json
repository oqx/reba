{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "moduleResolution": "node",
      "noImplicitAny": false,
    //   "allowSyntheticDefaultImports": true,
      "sourceMap": false,
      "resolveJsonModule": true,
      "target": "es5",
      "outDir": "dist",
    },
    "typeRoots": [
        "node_modules/@types",
        "node_modules/@types/node"
      ],
    "include": [
      "src/*.ts"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
  }